{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "process",
            "label": "gcc build active file",
            "command": "gcc",
            "args": [
                "-g",
                "${workspaceFolder}/main.c",
                "${workspaceFolder}/snake.c",
                "-o",
                "${workspaceFolder}/snake_game"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
